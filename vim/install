#! /usr/bin/env bash
#
# Copyright (C) distroy
#


cd "$(dirname "${BASH_SOURCE[0]}")"
SOURCE_DIR="$PWD"
source ../install


WRITE_FILE=$HOME/.vimrc


# vimrc
cat >>$WRITE_FILE <<EOF
" ld vimrc
source ${SOURCE_DIR/#$HOME/\$HOME}/vimrc
EOF

cp -v ./lib/plugin/auto_format/clang-format $HOME/.clang-format
cp -v ./lib/plugin/ycm/ycm_extra_conf.py $HOME/.ycm_extra_conf.py

vim +PlugInstall
