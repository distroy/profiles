#!/bin/bash
#
# Copyright (C) distroy
#


cd "$(dirname "${BASH_SOURCE[0]}")"
SOURCE_DIR="$PWD"
source ../install


# bin dir symbol link
ld_link $SOURCE_DIR/bin $HOME/local/cygwin/bin


# bin dir zshrc env
for i in $HOME/.zshrc; do
    cat >>"$i" <<EOF
# ld cygwin bin directory
export PATH=\$HOME/local/cygwin/bin:\$PATH
EOF
done


# minttyrc
ld_link $SOURCE_DIR/minttyrc $HOME/.minttyrc

