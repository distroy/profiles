#!/bin/bash

LDRC="$(pwd)"
LD_ZSHRC=$HOME/.zshrc
LD_VIMRC=$HOME/.vimrc
LD_GITRC=/etc/gitconfig


cat >>"$LD_ZSHRC" <<EOF
# ld zshrc
LDRC="$LDRC"
#ZSH=
#ZSH_DISABLE_GIT_DIRTY="\$my_orange!%{\$reset_color%}"
source "\$LDRC/zshrc"
unset LDRC ZSH
EOF

exit

cat >>"$LD_VIMRC" <<EOF
" ld vimrc
source $LDRC/vimrc
EOF

# cat >>"$LD_GITRC" <<EOF
# [include]
# 	path = "$LDRC/gitconfig"
# EOF

test -f "$LD_GITRC" && mv "$LD_GITRC" "${LD_GITRC}_bak" &>/dev/null
ln -s "$LDRC/gitconfig" "$LD_GITRC"

